// https://www.typescriptlang.org/tsconfig

{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    // "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",

    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"]
    }
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "additional.d.ts",
    "images.d.ts",
    "jest.config.js",
    "jest.setup.js",
    "next-env.d.ts",
    "styled.d.ts"
  ],

  "exclude": [
    "node_modules"
    // ".next",
    // "**/*.test.js",
    // "**/*.test.jsx",
    // "**/*.test.ts",
    // "**/*.test.tsx",
  ]
}
