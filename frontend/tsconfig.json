// https://react-typescript-cheatsheet.netlify.app/

{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/constants/*": ["src/constants/*"],
      "@/context/*": ["src/context/*"],
      "@/graphql/*": ["src/graphql/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/models/*": ["src/models/*"],
      "@/pages/*": ["src/pages/*"],
      "@/public/*": ["public/*"],
      "@/root/*": ["/*"],
      "@/styles/*": ["src/styles/*"],
      "@/utils/*": ["src/utils/*"]

      // "@graphql-types@": [
      //   "node_modules/@types/graphql-let/__generated__/__types__"
      // ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "additional.d.ts",
    "jest.config.js",
    "jest.setup.js",
    "next-env.d.ts",
    "types.d.ts"
    // ".storybook/*.js"
  ],
  "exclude": [
    ".next",
    "**/*.test.js",
    "**/*.test.ts",
    "node_modules",
    "storybook-static"
  ]
}
