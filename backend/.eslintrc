{
  "env": {
    "node": true,
    "es2021": true
  },

  "extends": ["eslint:recommended", "plugin:import/recommended"],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "none", "ignoreRestSiblings": false }
    ]
  }
}
